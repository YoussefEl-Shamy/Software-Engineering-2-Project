@model Software2_project.Models.QuestionModel
@{
    ViewBag.Title = "deleteQuestion";
    Layout = "~/Views/Shared/ProfessorLayout.cshtml";
}

<h2 id="Pagetitle" style="text-align:center; font-weight:bold; margin-right:auto; margin-left:auto">
    <span style="border-bottom:1.5px solid;">Delete Question of <span style="font-weight:bold">@Model.CourseModel.name Exam</span></span>
</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.question)
        </dt>

        <dd style="border:1.5px solid rgba(230, 115, 0, 1); border-radius:25px; padding:10px; width:30%">
            <pre>@Html.DisplayFor(model => model.question)</pre>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.answer1)
        </dt>

        <dd style="border:1.5px solid rgba(230, 115, 0, 1); border-radius:25px; padding:10px; width:30%">
            <pre>@Html.DisplayFor(model => model.answer1)</pre>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.answer2)
        </dt>

        <dd style="border:1.5px solid rgba(230, 115, 0, 1); border-radius:25px; padding:10px; width:30%">
            <pre>@Html.DisplayFor(model => model.answer2)</pre>
        </dd>

        @if (Model.answer3 != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.answer3)
            </dt>

            <dd style="border:1.5px solid rgba(230, 115, 0, 1); border-radius:25px; padding:10px; width:30%">
                <pre>@Html.DisplayFor(model => model.answer3)</pre>
            </dd>
        }

        @if (Model.answer4 != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.answer4)
            </dt>

            <dd style="border:1.5px solid rgba(230, 115, 0, 1); border-radius:25px; padding:10px; width:30%">
                <pre>@Html.DisplayFor(model => model.answer4)</pre>
            </dd>
        }

        @if (Model.answer5 != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.answer5)
            </dt>

            <dd style="border:1.5px solid rgba(230, 115, 0, 1); border-radius:25px; padding:10px; width:30%">
                <pre>@Html.DisplayFor(model => model.answer5)</pre>
            </dd>
        }
    </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.id)
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "listStudents", "Admin")
            </div>
        }
</div>

