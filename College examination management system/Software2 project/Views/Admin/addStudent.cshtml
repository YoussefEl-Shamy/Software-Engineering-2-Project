@model Software2_project.Models.StudentModel
@{
    ViewBag.Title = "addStudent";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 id="Pagetitle" style="text-align:center; font-weight:bold; width:28.5%; margin-right:auto; margin-left:auto">
    <span style="border-bottom:1.5px solid;">Add New Student</span>
</h2>

@using (Html.BeginForm("CreateStudent", "Admin"))
{
    <div class="form-group" style="font-weight: bold; margin-top: 20px">
        @Html.LabelFor(m => m.name)
        @Html.TextBoxFor(m => m.name, new { @class = "form-control", placeholder = "Enter Student Name" })
        @Html.ValidationMessageFor(m => m.name)
    </div>

    <div class="form-group" style="font-weight:bold">
        @Html.LabelFor(m => m.username)
        @Html.TextBoxFor(m => m.username, new { @class = "form-control", placeholder = "Enter Student Username" })
        @Html.ValidationMessageFor(m => m.username)
    </div>

    <div id="gone" class="form-group" style="font-weight:bold">
        @Html.LabelFor(m => m.password)
        @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "Enter Student Password" })
        @Html.ValidationMessageFor(m => m.password)
    </div>

    <div class="form-group" style="font-weight:bold">
        @Html.LabelFor(m => m.age)
        @Html.TextBoxFor(m => m.age, new { @class = "form-control", placeholder = "Enter Student Age" })
        @Html.ValidationMessageFor(m => m.age)
    </div>

    <div class="form-group" style="font-weight:bold">
        @Html.LabelFor(m => m.e_mail)
        @Html.TextBoxFor(m => m.e_mail, new { @class = "form-control", placeholder = "Enter Student E-mail" })
        @Html.ValidationMessageFor(m => m.e_mail)
    </div>

    <div class="form-group" style="font-weight:bold">
        @Html.LabelFor(m => m.address)
        @Html.TextBoxFor(m => m.address, new { @class = "form-control", placeholder = "Enter Student Address" })
        @Html.ValidationMessageFor(m => m.address)
    </div>

    <div class="form-group" style="font-weight:bold">
        @Html.LabelFor(m => m.phone)
        @Html.TextBoxFor(m => m.phone, new { @class = "form-control", placeholder = "Enter Student Phone" })
        @Html.ValidationMessageFor(m => m.phone)
    </div>

    <div class="form-group" style="font-weight:bold">
        @Html.LabelFor(m => m.gender)
        @Html.DropDownListFor(m => m.gender, new List<SelectListItem>
   {
       new SelectListItem{Text="Male", Value="male"},
       new SelectListItem{Text="Female", Value="female"},
   }, "Select Gender", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.gender)
    </div>

    @Html.HiddenFor(m => m.id);

    <button type="submit" class="btn btn-primary" style="border-radius:10px;margin-top:10px">Submit</button>
    <button type="reset" class="btn btn-dark" style="background-color:#ae0303; border-radius:10px;margin-top:10px; float:right">Reset form</button>

}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>